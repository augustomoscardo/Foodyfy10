{% set pageName = "users" %}
{% extends "admin/session/session-layout.njk" %}

{% block head %}

    <title>Foodfy - Recuperar Senha</title>

{% endblock %}

{% block content %}

    <section class="password container form">

        <form action="/admin/users/forgot-password" method="post">
            <div class="page-header">
                <h2>Esqueceu a Senha?</h2>
            </div>

            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input 
                            type="email"
                            name="email"
                            placeholder="Digite seu email"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <div class="footer">
                
                <button class="button" type="submit">Recuperar</button>
                    
            </div>

        </form>

    </section>

{% endblock content %}