<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >  {# o "onblur" faz com que quando sair do campo de email ele dispara a m√°scara "Validate"  #}
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite uma nova senha"
        >
    </div>
</div>

<div class="item">
    <div>Repetir a Senha</div>
    <div class="input">
        <input 
            type="password"
            name="passwordRepeat"
            placeholder="Repita a nova senha"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">