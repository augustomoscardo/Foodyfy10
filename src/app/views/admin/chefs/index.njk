{% set pageName = "chefs" %}
{% extends "admin/layout.njk" %}

{% block head %}
    
    <title>Foodfy - Chefs</title>

{% endblock %}

{% block content %}
<div class="container">
    <div class="page-header"> 
        <h2>Gerenciar Chefs</h2>
        <a href="/admin/chefs/create" class="btn">Adicionar Chef</a>
    </div>

    <div class="chefs">
        {% for chef in chefs %}    
            <div class="chef" id="{{chef.id}}">
                <div class="chef_avatar">
                    <img src="{{chef.image}}" alt="{{chef.name}}">
                </div>
                <div class="chef_content">
                    <div class="chef_name">
                        <p>{{chef.name}}</p>
                    </div>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock content %}