{% set pageName = "users" %}
{% extends "admin/layout.njk" %}

{% block head %}
    
    <title>Foodfy - Cadastrando Usuário</title>

{% endblock %}

{% block content %}

    <section class="user-register container form">
        
            <form id="post" action="/admin/users" method="post">

                <div class="form-header">
                    <h2>Criar Usuário</h2>
                    
                    <div class="buttons">
                        <button type="submit" class="button">Salvar</button>
                        <a href="/admin/users">Cancelar</a>
                    </div>
                </div>

                <div class="fields">
                    {% include 'admin/users/fields.njk' %}
                </div>  

            </form>
        
    </section>


{% endblock content %}